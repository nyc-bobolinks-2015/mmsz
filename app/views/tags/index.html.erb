<h2> #tags </h2>
<div id="search_by_tag">
  <%= form_tag tags_search_path do %>
    <%= text_field_tag :search_name %>
    <%= submit_tag "search by tag"%>
  <% end %>
</div>

<div id="latest_and_greatest">
  <%= link_to "latest", tags: :index, :query => "latest" %> <%= link_to "greatest", tags: :index, :query => "greatest" %>
</div>

<div class="list_of_tags">
  <ul>
  <% @tags.each do |tag|%>
    <li><%= link_to tag.name, tag_path(tag) %> <%= tag.questions.count %></li>
    <li><%= tag.questions.added_today.length %> added today / <%= tag.questions.added_this_week.length %> added this week</li>
  <% end %>
  </ul>
</div>