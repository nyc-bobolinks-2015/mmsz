<ol id="user-list">
	<% @users.each do |user| %>
		<li class="user">
			<ul>
				<li class="username"><%= user.username %></li>
				<li class="karma"><%= user.karma %></li>
				<li class="top-tags">
					<% user.top_three_tags.each do |tag| %>
						<%= tag %>
					<% end %>
				</li>
			</ul>
		</li>
	<% end %>
</ol>